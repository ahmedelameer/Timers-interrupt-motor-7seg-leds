#include "LED.h"

#define port    PC
#define pin     0
#define port2    PC
#define pin2     1

void LED_on_PL(){
	Pin_output(port,pin);
}

void LED_on_2PL(){

	Pin_output(port2,pin2);

}

void LED_on_NL(){
	Pin_clear(port,pin);

}


void LED_off_PL(void){
	Pin_clear(port,pin);
}


void LED_off_2PL(void){

	Pin_clear(port2,pin2);
}

void LED_toggle_PL(){
	Pin_toggle(port,pin);
	_delay_ms(1000);

}

void LED_toggle_2PL(){
	Pin_toggle(port2,pin2);
	_delay_ms(1000);

}


void LED_toggle_NL(){
	LED_off_PL();
	_delay_ms(1000);
	LED_on_PL();
	_delay_ms(1000);


}


