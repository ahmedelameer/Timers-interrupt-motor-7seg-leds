#include "segment.h"



int main(void){
	volatile unit8 num=0,flag1=0,flag2=0;
	Direction_input(Direction_A,0);
	Direction_input(Direction_A,1);
	Direction_C|=0xF0;
	PC&=0x0F;
	while(1){
		if(Pin_is_set(PIND,4)){
			_delay_ms(30);
			if(Pin_is_set(PIND,4)){
				if(flag1==0){
				   if(PORT_check(PC,9)){
					    num++;
   				        PORT_equal(PC,num);
				        }

				   flag1=1;
			    }

		    }

	    }
		else
			flag1=0;

		if(Pin_is_set(PINA,1)){
					_delay_ms(30);
					if(Pin_is_set(PINA,1)){
						if(flag2==0){
						   if(PORT_check(PC,9)){
							    num--;
		   				        PORT_equal(PC,num);
						        }

						   flag2=1;
					    }

				    }

			    }
		else
		  flag2=0;





}
}

