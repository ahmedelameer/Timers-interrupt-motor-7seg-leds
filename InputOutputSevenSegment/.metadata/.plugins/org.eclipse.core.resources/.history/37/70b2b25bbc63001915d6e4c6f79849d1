#include"LED.h"





int main(void){
	unit8 i;
	Direction_C=0xFF;
	PORTC=0xFF;  /*negative logic*/

	while(1){
		Pin_clear(PC,0);
		for(i=1;i<8;i++){
		Pin_clear(PC,i);  /*negative logic*/
		_delay_ms(500);
		Pin_output(PC,i);
		}
		if(i==8)
			i=1;
	}

}
