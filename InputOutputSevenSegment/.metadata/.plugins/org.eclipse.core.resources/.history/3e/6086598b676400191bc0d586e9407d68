#include "segment.h"



int main(void){
	volatile unit8 num=0,flag=0;
	Direction_input(Direction_D,4);
	Direction_C|=0x0F;
	PC&=0xF0;
	while(1){
		if(Pin_is_set(PIND,4)){
			_delay_ms(30);
			if(Pin_is_set(PIND,4)){
				if(flag==0){
				if(PORT_check(PC,9)){
	                 num=0;
	                 PORT_equal(PC,num);
				   }
				else{
					 num++;
					 PORT_equal(PC,num);

				    }
				flag=1;
			   }

		}

	}
		else
			flag=0;
}
}

